.search{
  display: flex;
  border: 1px solid #aaa;
  border-radius: 4px;
}
.search image{
  width: 60rpx;
  height: 60rpx;
  border: 0;
}
.search input{
  box-sizing: content-box;
  width: 710rpx;
  padding:5px;
}

.bookItem navigator{
  display: flex;
  align-items: top;
  margin-bottom:20rpx;
}
.bookItem image{
  width:200rpx;
  height:200rpx;
  padding:10rpx;
  border:1px solid #ccc;
  border-radius: 5px;
}
.bookInfo{
  margin-left:30rpx;
}
.bookTitle{
  font-size:30rpx;
  margin-bottom:30rpx;
}
.minorCate,.author{
  font-size:26rpx;
  margin-bottom: 30rpx;
  color:#999;
}